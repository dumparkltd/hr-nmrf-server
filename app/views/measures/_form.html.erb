<%= form_for @measure do |f| %>

  <div class="row">
    <div class="column small-8">
      <div class="model-title">
        <h2><%= t('measure') %></h2>
      </div>
    </div>
    <div class="column small-4">
      <div class="list-new-action"> <h4><%= link_to t('cancel'), measures_path %> <%= f.submit t('save') %></h4></div>
    </div>
  </div>
  <% if @measure.errors %>
    <div class="row error-message">
      <% @measure.errors.full_messages.each do |error| %>
        <p><%= error %></p>
      <% end %>
    </div>
  <% end %>
  <div class="row">
    <div class="column small-12">
      <div class="model-body">
        <div class="row">
          <div class="column small-9">
            <%= f.label :title, t('fields.title') %>
            <%= f.text_field :title, value: @measure.title, placeholder: t('fields.title') %>
          </div>
          <div class="column small-1">
              <%= f.label :description, t('fields.description') %>
              <%= f.text_field :description, value: @measure.description, placeholder: t('fields.description') %>
          </div>
          <div class="column small-2">
            <label> <%= t('fields.status') %>
              <input type="text" placeholder= <%= t('fields.status') %> />
            </label>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
